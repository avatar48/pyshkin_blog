<!DOCTYPE html>
<html>
  <head>
    <title>PyshkinBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
      <header id="header">
        <nav>
          <ul class="menu">
            <li class="name"><%= link_to 'Главная', root_path %></li>
            <li class="name"><%= link_to 'Статьи', posts_path%></li>
            <li class="name"><%= link_to 'Пользователи', users_path%></li>
            <li class="name"><%= link_to 'Обо мне', about_me_index_path%></li>
          </ul>
        </nav>
    </header>
    <div class="container">
      <%= yield %>
    </div>
    <footer>
      <label><%= Time.current.year %></label>
    </footer>
  </body>
</html>
